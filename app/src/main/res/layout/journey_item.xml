<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        >
        <TextView
            android:id="@+id/journey_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4月1日12:00"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:id="@+id/tv_car_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快车"
            android:background="@drawable/car_type"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:layout_toRightOf="@+id/journey_time"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已完成"
            android:layout_marginLeft="35dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/tv_car_type"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textSize="18sp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/journey_start_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/iconmap_marker"
            android:paddingLeft="5dp"
            android:text="居里夫人大道隆平路"
            android:drawablePadding="5dp"
            android:textSize="18sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/journey_end_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/iconmap_marker_filled"
            android:paddingLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="龙岗区布龙路五和地铁站"
            android:drawablePadding="5dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@+id/journey_start_address"
            />
        <CheckBox
            android:id="@+id/item_cb"
            style="@style/FavCheckboxTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:clickable="false"
            android:focusable="false" />
    </RelativeLayout>


</LinearLayout>